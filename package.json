{
  "name": "typescript-npm-starter",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "watch": {
    "test": {
      "patterns": [
        "src"
      ],
      "extensions": "ts"
    },
    "lint": {
      "patterns": [
        "src",
        "spec"
      ],
      "extensions": "ts"
    }
  },
  "scripts": {
    "test": "jasmine-ts \"spec/**/*.spec.ts\"'",
    "lint": "eslint src/**/*.ts spec/**/*.ts --quiet --fix",
    "watch": "npm-watch",
    "prepublishOnly": "eslint src/**/*.ts --quiet --fix tsc"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jasmine": "^3.6.2",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "jasmine": "^3.6.3",
    "jasmine-ts": "^0.3.0",
    "npm-watch": "^0.7.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
